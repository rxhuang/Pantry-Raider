<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stevetran.pantryraider.Setting.ChangePasswordFragment">

    <EditText
        android:id="@+id/CPoldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="42dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/CPnewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/CPoldpassword"
        app:layout_constraintRight_toRightOf="@+id/CPoldpassword"
        app:layout_constraintTop_toBottomOf="@+id/CPoldpassword"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/CPretypepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/CPnewpassword"
        app:layout_constraintRight_toRightOf="@+id/CPnewpassword"
        app:layout_constraintTop_toBottomOf="@+id/CPnewpassword" />

    <Button
        android:id="@+id/BtnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@color/white"
        android:text="Change Password"
        app:layout_constraintBottom_toBottomOf="@+id/Clear"
        app:layout_constraintLeft_toRightOf="@+id/Clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.544" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@color/white"
        android:text="Clear"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/CPretypepassword" />

</android.support.constraint.ConstraintLayout>